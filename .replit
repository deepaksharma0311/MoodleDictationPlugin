modules = ["php"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Moodle Server"

[[workflows.workflow]]
name = "Moodle Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /tmp && git clone https://github.com/moodle/moodle.git --branch MOODLE_311_STABLE --depth 1 && cd moodle && cp -r /home/runner/work/question /tmp/moodle/question/type/dictation && php -S 0.0.0.0:5000 -t /tmp/moodle"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd /tmp && git clone https://github.com/moodle/moodle.git --branch MOODLE_311_STABLE --depth 1 && cd moodle && cp -r /home/runner/work/question /tmp/moodle/question/type/dictation && php -S 0.0.0.0:5000 -t /tmp/moodle"]
